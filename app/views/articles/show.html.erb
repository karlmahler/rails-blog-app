<h1><%= @article.title %></h1>

<div>
  <%= @article.body %>
</div>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment</h2>
<%= render 'comments/form', article: @article %>

<hr>

<ul>
  <li><%= link_to 'Edit', edit_article_path(@article) %></li>
  <li><%= link_to 'Destroy', @article, data: {
    turbo_method: :delete,
    turbo_confirm: 'Are you sure?'
  } %></li>
  <li><%= link_to 'Go back', articles_path %></li>
</ul>
